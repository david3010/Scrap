@model IEnumerable<Aplicacion_de_SCRAP.Models.Line>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IIdLinea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IIdLinea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.LineID }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.LineID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.LineID })
        </td>
    </tr>
}

</table>
